<%- include('./partiels/HeaderMenu.ejs') %>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fa-solid fa-trash"></i>Supprimer un compte</h1>
        <p>
            <%- include('./partiels/message.ejs') %>
        </p>
        <form action="/usagers/supprimer/:email" method="POST">
            <div class="form-group">
                <label for="nom">Nom</label>
                <input type="text" name="nom" id="nom" class="form-control"
                    value="<%= typeof nom != 'undefined' ? nom :user.nom %>"
                    disabled>
            </div>
            <div class="form-group">
                <label for="_id">Courriel</label>
                <input type="email" name="_id" id="_id" class="form-control"
                    value="<%= typeof _id != 'undefined' ? _id :user._id %>"
                    disabled>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Supprimer</button>
        </form>
    </div>
    </div>
</div>
