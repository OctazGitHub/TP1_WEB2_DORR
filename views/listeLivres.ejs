<%- include('./partiels/HeaderMenu.ejs') %>
<div class="container text-center">
    <h2>Voici la liste des livre...</h2>
        <h3>Liste des livres</h3>
        <form action="/usagers/login">
            <button type="submit" class="btn btn-primary btn-block"><i class="fa-solid fa-right-from-bracket "> Se deconnecter</i></button>
        </form>
        <br>
        <form action="/usagers/ajouterLivres">
            <button type="submit" class="btn btn-primary btn-block"><i class="fa-solid fa-plus"> Creez un livres</i></button>
        </form>
    <p>
        <%- include('./partiels/message.ejs') %>
    </p>
</div>
<% if (typeof tousLivres != 'undefined'){ %>
    <% tousLivres.forEach( function(livre){ %>
        <div class="alert alert-dark" role="alert">
            <h2>Titre :<%= livre.titre %> </h2>
            <h3>Auteur :<%= livre.auteur %> </h3>
            <h3>resumé :<%= livre.resumé %> </h3>
            <h3>Editeur :<%= livre.éditeur %> </h3>
            <h3>Prix :<%= livre.prix %>$</h3>
            <a href="/usagers/editerLivres/<%=livre._id %>"><i class="fa-solid fa-pencil fa-2xl" style="float: right;"></i></a>
            <a href="/usagers/supprimerLivres/<%=livre._id %>"><i class="fa-solid fa-trash fa-2xl" style="float: right;margin-right:50px;"></i></a>
        </div>
   <% }) %>
<% } %>