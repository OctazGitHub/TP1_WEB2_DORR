
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>Connexion</h1>
        <p>
            <%- include('./partiels/message.ejs') %>
        </p>
        <form action="/usagers/login" method="POST">
            <div class="form-group">
                <label for="_id">Courriel</label>
                <input type="email" name="_id" id="_id" class="form-control"
                    value="<%= typeof _id != 'undefined' ? _id :'' %>"
                    placeholder="Entrez un courriel">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control"
                value="<%= typeof password != 'undefined' ? password:''%>"
                placeholder="Entrez un mot de passe">
            </div>
            <br>
            <button type="submit" class="btn btn-primary btn-block">Connexion</button>
        </form>
    </div>
    </div>
</div>
